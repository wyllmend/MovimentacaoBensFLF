@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Movimentações de Bens</title>

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet">

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Font Awesome (ícones) -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />

    <!-- CSS do Template -->
    <link rel="stylesheet" href="~/css/navbar.css" asp-append-version="true" />

    <!-- CSS padrão do projeto -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-custom navbar-mainbg">
        <a class="navbar-brand navbar-logo fw-bold" href="/">Movimentações</a>
        <button class="navbar-toggler" type="button" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <i class="fas fa-bars text-white"></i>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <!-- Mover o div .hori-selector para fora do ul -->
            <div class="hori-selector"><div class="left"></div><div class="right"></div></div>
            <ul class="navbar-nav ms-auto">
                <li class="nav-item active">
                    <a class="nav-link" href="/"><i class="fas fa-tachometer-alt"></i>Dashboard</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Privacy"><i class="far fa-address-book"></i>Privacy</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Movimentacoes"><i class="far fa-clone"></i>Movimentações</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Bens"><i class="far fa-calendar-alt"></i>Bens</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Usuarios"><i class="far fa-chart-bar"></i>Usuários</a>
                </li>
            </ul>
        </div>
    </nav>

    <!-- Conteúdo principal -->
    <div class="container mt-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <footer class="border-top footer text-muted text-center py-3">
        <div class="container">
            &copy; 2025 - Movimentações de Bens - <a href="/Privacy">Privacy</a>
        </div>
    </footer>

    <!-- JS: jQuery, Bootstrap -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <!-- JS do Template -->
    <script src="~/js/navbar.js" asp-append-version="true"></script>

    <!-- JS padrão -->
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>

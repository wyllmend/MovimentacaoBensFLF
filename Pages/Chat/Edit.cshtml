@page
@model MovimentacaoBensFLF.Pages.Chat.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>ChatMensagem</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ChatMensagem.Id" />
            <div class="form-group">
                
                <label asp-for="ChatMensagem.SolicitacaoId" class="control-label"></label>
                <select asp-for="ChatMensagem.SolicitacaoId" class="form-control" asp-items="ViewBag.SolicitacaoId"></select>
                <span asp-validation-for="ChatMensagem.SolicitacaoId" class="text-danger"></span>
            </div>
            <div class="form-group">
                
                <label asp-for="ChatMensagem.UsuarioId" class="control-label"></label>
                <input asp-for="ChatMensagem.UsuarioId" class="form-control" />
                <span asp-validation-for="ChatMensagem.UsuarioId" class="text-danger"></span>
            </div>
            <div class="form-group">
                
                <label asp-for="ChatMensagem.Mensagem" class="control-label"></label>
                <input asp-for="ChatMensagem.Mensagem" class="form-control" />
                <span asp-validation-for="ChatMensagem.Mensagem" class="text-danger"></span>
            </div>
            <div class="form-group">
                
                <label asp-for="ChatMensagem.DataHora" class="control-label"></label>
                <input asp-for="ChatMensagem.DataHora" class="form-control" />
                <span asp-validation-for="ChatMensagem.DataHora" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
